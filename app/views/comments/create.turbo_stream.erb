<%= turbo_stream.replace "post_comment_form",
  partial: "comments/form", locals: { comment: Comment.new, post: @post } %>
<%= turbo_stream.update "post_#{@post.id}_comment_count",
  pluralize(@post.comments.size, 'comment') %>
<%= turbo_stream.append "post_#{@post.id}_comments", partial: "comments/comment",
  locals: { comment: @comment} %>
